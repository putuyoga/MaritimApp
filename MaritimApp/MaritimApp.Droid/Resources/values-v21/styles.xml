<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Inherit from the light Material Theme -->
    <style name="MaritimTheme" parent="android:Theme.Material.Light">
        <!-- Override the app bar color -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/MaritimActionBarStyle</item>
        <item name="android:colorPrimary">@color/main_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Override the color of UI controls -->
        <item name="android:colorAccent">@color/main_color</item>
        <item name="android:actionBarStyle">@style/MaritimActionBarStyle</item>
        <item name="android:buttonStyle">@style/MaritimButtonStyle</item>
        <item name="android:editTextStyle">@style/MaritimEditTextStyle</item>
        <item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>
    </style>
    <style name="MaritimActionBarStyle" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/main_color</item>
        <item name="android:titleTextStyle">@style/MaritimTitleTextStyle</item>
    </style>

    <style name="PopupMenuTextView" parent="@style/android:Theme.Material.Light">
        <item name="android:textColor">@color/black</item>
    </style>
  
    <style name="MaritimButtonStyle" parent="android:style/Widget.Button">
      <item name="android:textSize">15sp</item>
      <item name="android:layout_margin">12dip</item>
      <item name="android:padding">8dp</item>
      <item name="android:background">@drawable/selector_bg_button</item>
      <item name="android:textColor">@drawable/selector_fg_button</item>
    </style>
  
    <style name="MaritimEditTextStyle" parent="android:style/Widget.EditText">
      <item name="android:textSize">16sp</item>
      <!--item name="android:layout_margin">12dip</item>
      <item name="android:padding">8dp</item>
      <item name="android:background">@drawable/selector_bg_entry</item>
      <item name="android:textColor">@drawable/selector_fg_entry</item-->
    </style>

    <style name="MaritimTitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>