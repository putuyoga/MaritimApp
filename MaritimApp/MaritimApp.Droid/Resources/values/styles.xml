<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Inherit from the light Holo Theme -->
  <style name="MaritimTheme" parent="android:Theme.Holo.Light.DarkActionBar">

    <!-- action bar -->
    <item name="android:logo">@android:color/transparent</item>
    <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    <item name="android:icon">@android:color/transparent</item>
    <item name="android:colorAccent">@color/main_color</item>
    <item name="android:actionBarStyle">@style/MaritimActionBarStyle</item>
      <item name="android:actionBarWidgetTheme">@style/PopupMenuTextView</item>
    <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
    
    <!-- main color -->
    <item name="android:windowBackground">@color/white</item>
    <item name="android:colorPrimary">@color/main_color</item>
    <item name="android:colorPrimaryDark">@color/main_dark_color</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorHighlight">#993c5e7b</item>
    

    <item name="android:buttonStyle">@style/MaritimButtonStyle</item>
    <item name="android:editTextStyle">@style/MaritimEditTextStyle</item>
  
    <!-- replace default color blue holo -->
    <item name="android:editTextBackground">@drawable/maritimtheme_edit_text_holo_light</item>
    <item name="android:seekBarStyle">@style/SeekBarMaritimTheme</item>
  </style>
  <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
    <item name="android:textColor">#000000</item>
  </style>
  <style name="MaritimActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/main_color</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:titleTextStyle">@style/MaritimTitleTextStyle</item>
  </style>

  <style name="PopupMenuTextView" parent="@style/android:Theme.Holo.Light">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="MaritimButtonStyle" parent="android:style/Widget.Button">
    <item name="android:textSize">15sp</item>
    <item name="android:layout_margin">12dip</item>
    <item name="android:padding">8dp</item>
    <item name="android:background">@drawable/selector_bg_button</item>
    <item name="android:textColor">@drawable/selector_fg_button</item>
  </style>

  <style name="MaritimEditTextStyle" parent="android:style/Widget.EditText">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="MaritimTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="SeekBarMaritimTheme" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/maritimtheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/maritimtheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:thumb">@drawable/maritimtheme_scrubber_control_selector_holo_light</item>
  </style>

<!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
           parent="@android:style/Widget.Holo.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
</resources>